{
  "editor.tabSize": 2,
  "eslint.packageManager": "npm",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.wordWrapColumn": 90,
  "editor.rulers": [
    90
  ],
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "files.exclude": {
    "packages-cache": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.cache": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.associations": {
    "Dockerfile-prod": "dockerfile",
    "Dockerfile-dev": "dockerfile",
    ".dockerignore": "ignore",
    ".postcssrc": "json",
    "tsconfig.*.json": "jsonc"
  },
  "vsicons.associations.files": [
    {
      "icon": "docker2",
      "filename": true,
      "extensionsGlob": [
        "yml"
      ],
      "filenamesGlob": [
        "docker-compose",
        "docker-compose.local",
        "docker-compose.base",
        "docker-compose.nightly",
        "docker-compose.qa",
        "docker-compose.insiders",
        "docker-compose.production",
        "docker-compose.cypress",
        "docker-compose.cypress.override"
      ]
    },
    {
      "icon": "tsconfig",
      "filename": true,
      "extensionsGlob": [
        "json"
      ],
      "filenamesGlob": [
        "tsconfig.base",
        "tsconfig.front"
      ]
    },
    {
      "icon": "jest",
      "filename": true,
      "extensionsGlob": [
        "js"
      ],
      "filenamesGlob": [
        "jest-e2e.config",
        "jest.config.integration"
      ]
    },
    {
      "icon": "test",
      "extensions": [
        "e2e-test.ts"
      ]
    },
    {
      "icon": "style",
      "extensions": [
        "jss.ts"
      ]
    }
  ],
  // disable default vscode formatters and use prettier instead
  // "javascript.format.enable": true,
  // "typescript.format.enable": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.cache": true,
    "**/dist": true,
    "**/build": true
  },
  "emmet.excludeLanguages": [
    "markdown",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "cSpell.words": [
    "Chainable",
    "Clickables",
    "colspan",
    "commitlint",
    "controlfield",
    "datafield",
    "dataloader",
    "dataloaders",
    "deepmerge",
    "fieldname",
    "figma",
    "hsetnx",
    "immer",
    "jotai",
    "Kube",
    "kubectl",
    "kubernetes",
    "Layouting",
    "Locize",
    "logoutcallback",
    "nonfiling",
    "notistack",
    "OIDC",
    "posttest",
    "precommit",
    "Referenceable",
    "reindexing",
    "SCROLLABLE",
    "upsert",
    "xdel",
    "xrange",
    "xtrim"
  ],
}
